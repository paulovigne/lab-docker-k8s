kubernetes_version: "${k8s-version}" 
cluster_name: "rke-k8s-lab"

nodes:
%{ for index, group in k8s-master-nodes ~}
    - address: ${k8s-master-nodes[index]}
      user: ec2-user
      role:
        - controlplane
        - etcd
%{ endfor ~}

%{ for index, group in k8s-worker-nodes ~}
    - address: ${k8s-worker-nodes[index]}
      user: ec2-user
      role:
        - worker
%{ endfor ~}

authentication:
    strategy: x509
    sans:
%{ for index, group in k8s-master-ips ~}
      - "${k8s-master-ips[index]}"
%{ endfor ~}

upgrade_strategy: 
  max_unavailable_worker: 25% 
  max_unavailable_controlplane: 1 
  drain: false 
  node_drain_input: 
    force: false 
    ignore_daemonsets: true 
    delete_local_data: false 
    grace_period: -1 
    timeout: 60 

ingress:
    provider: nginx

services:
  kube-api:
    always_pull_images: true
    secrets_encryption_config:
      enabled: true
      custom_config:
        apiVersion: apiserver.config.k8s.io/v1
        kind: EncryptionConfiguration
        resources:
        - resources:
          - secrets
          providers:
          - aescbc:
              keys:
              - name: aescbc-key
                secret: A0i+MQWiuQnOPQsECZvplCUSh0L5ChhZu88K7M/eFhE=
          - identity: {}
    event_rate_limit:
      enabled: true
    service_cluster_ip_range: 10.43.0.0/16
    service_node_port_range: 30000-32767

  kube-controller:
    cluster_cidr: 10.42.0.0/16
    service_cluster_ip_range: 10.43.0.0/16
    extra_args:
      bind-address: 127.0.0.1
      feature-gates: RotateKubeletServerCertificate=true

  scheduler:
    extra_args:
      bind-address: 127.0.0.1

  kubelet:
    cluster_domain: cluster.local
    cluster_dns_server: 10.43.0.10
    generate_serving_certificate: true
    fail_swap_on: true
    extra_args:
      volume-plugin-dir: /usr/libexec/kubernetes/kubelet-plugins/volume/exec
      feature-gates: RotateKubeletServerCertificate=true
      tls-cipher-suites: TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256,TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256,TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305,TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384,TLS_ECDHE_RSA_WITH_CHACHA20_POLY1305,TLS_ECDHE_ECDSA_WITH_AES_256_GCM_SHA384,TLS_RSA_WITH_AES_256_GCM_SHA384,TLS_RSA_WITH_AES_128_GCM_SHA256
    extra_binds:
      - /usr/libexec/kubernetes/kubelet-plugins/volume/exec:/usr/libexec/kubernetes/kubelet-plugins/volume/exec

  etcd:
    uid: 52034
    gid: 52034
    extra_args:
      election-timeout: '5000'
      heartbeat-interval: '500'
    backup_config:
      interval_hours: 6
      retention: 30

network:
  plugin: canal
